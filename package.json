{
	"name": "obsidian-simple-todo",
	"version": "1.0.0",
	"description": "A minimalist text-based todo manager (Text-Based GTD) plugin for efficient task management in Obsidian.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"todo",
		"gtd",
		"task-management"
	],
	"author": "elliotxx",
	"repository": {
		"type": "git",
		"url": "https://github.com/elliotxx/obsidian-simple-todo"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0"
	},
	"dependencies": {
		"react-diff-viewer": "^3.1.1"
	}
}
